{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Domestic airline network utilisation â€“ ASKs, RPKs, and Load Factor (moving annual totals)",
  "width": 800,
  "height": 420,
  "data": {
    "url": "../data/aggregated_domestic_flights.csv",
    "format": {
      "type": "csv",
      "parse": {
        "Year": "number",
        "Passenger_km": "number",
        "Available_Seat_km": "number",
        "Load_Factor": "number"
      }
    }
  },

  "transform": [
    {"calculate": "datum.Available_Seat_km / 1e9", "as": "ASK_B"},
    {"calculate": "datum.Passenger_km / 1e9", "as": "RPK_B"},
    {"fold": ["ASK_B", "RPK_B", "Load_Factor"], "as": ["Metric", "Value"]},
    {
      "calculate": "datum.Metric === 'ASK_B' ? 'ASKs' : (datum.Metric === 'RPK_B' ? 'RPKs' : 'Load Factor (%)')",
      "as": "MetricLabel"
    }
  ],

  "layer": [
    {
      "transform": [{"filter": "datum.Metric !== 'Load_Factor'"}],
      "mark": {"type": "line", "interpolate": "monotone", "strokeWidth": 2.5},
      "encoding": {
        "x": {
          "field": "Year",
          "type": "quantitative",
          "scale": {"domain": [2015, 2024], "nice": false},
          "axis": {
            "title": null,
            "tickMinStep": 1,
            "format": "d",
            "labelAngle": 0,
            "labelFontSize": 12,
            "labelPadding": 5,
            "grid": false,
            "domain": true,
            "domainColor": "#333333",
            "domainWidth": 1.5
          }
        },
        "y": {
          "field": "Value",
          "type": "quantitative",
          "scale": {"domain": [0, 100]},
          "axis": {
            "title": "ASKs / RPKs (billions)",
            "orient": "left",
            "values": [0, 20, 40, 60, 80, 100],
            "titleFontSize": 14,
            "labelFontSize": 12,
            "labelPadding": 6,
            "titlePadding": 12,
            "grid": true,
            "gridColor": "#e0e0e0",
            "domain": false
          }
        },
        "color": {
          "field": "MetricLabel",
          "type": "nominal",
          "scale": {
            "domain": ["ASKs", "RPKs", "Load Factor (%)"],
            "range": ["#e31a1c", "#33a02c", "#1f78b4"]
          },
          "legend": {
            "orient": "bottom-left",
            "title": null,
            "labelFont": "Arial",
            "direction": "horizontal",
            "padding": 0,
            "labelFontSize": 12,
            "symbolSize": 300,
            "symbolStrokeWidth": 2
          }
        },
        "tooltip": [
          {"field": "Year", "type": "quantitative", "format": "d"},
          {"field": "MetricLabel", "type": "nominal", "title": "Metric"},
          {"field": "Value", "type": "quantitative", "format": ".2f", "title": "Value"}
        ]
      }
    },
    {
      "transform": [{"filter": "datum.Metric === 'Load_Factor'"}],
      "mark": {"type": "line", "interpolate": "monotone", "strokeWidth": 2},
      "encoding": {
        "x": {"field": "Year", "type": "quantitative"},
        "y": {
          "field": "Value",
          "type": "quantitative",
          "scale": {"domain": [55, 95]},
          "axis": {
            "title": "Load factor (%)",
            "orient": "right",
            "values": [55, 65, 75, 85, 95],
            "titleFontSize": 14,
            "labelFontSize": 12,
            "labelPadding": 6,
            "titlePadding": 12,
            "grid": false,
            "domain": false
          }
        },
        "color": {
          "field": "MetricLabel",
          "type": "nominal",
          "scale": {
            "domain": ["ASKs", "RPKs", "Load Factor (%)"],
            "range": ["#d62728", "#6B8E23", "#1f77b4"]
          },
          "legend": null
        },
        "tooltip": [
          {"field": "Year", "type": "quantitative", "format": "d"},
          {"field": "MetricLabel", "type": "nominal", "title": "Metric"},
          {"field": "Value", "type": "quantitative", "format": ".2f", "title": "Value"}
        ]
      }
    }
  ],

  "resolve": { "scale": { "y": "independent" } },

  "config": {
    "background": "white",
    "axis": { "tickColor": "lightgray", "labelFont": "Arial", "titleFont": "Arial" },
    "view": { "stroke": "transparent" }
  }
}
