{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://vega.github.io/vega-datasets/data/cars.json"},
  "layer": [
    {
      "params": [
        {
          "name": "ptSelect",
          "select": {"type": "point", "fields": ["Origin"]}
        }
      ],
      "mark": "point",
      "encoding": {
        "x": {"field": "Horsepower", "type": "quantitative"},
        "y": {"field": "Miles_per_Gallon", "type": "quantitative"},
        "color": {
          "condition": {"param": "ptSelect", "field": "Origin", "type": "nominal"},
          "value": "lightgray"
        },
        "tooltip": [
          {"field": "Name", "title": "Car"},
          {"field": "Origin"},
          {"field": "Horsepower"},
          {"field": "Miles_per_Gallon"}
        ]
      }
    },
    {
      "transform": [{"filter": {"param": "ptSelect"}}],
      "mark": {
        "type": "text",
        "x": 200,
        "y": -10,
        "fontSize": 14,
        "fontWeight": "bold",
        "color": "black"
      },
      "encoding": {
        "text": {"aggregate": "distinct", "field": "Origin"}
      }
    }
  ]
}
