{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://vega.github.io/vega-datasets/data/cars.json"},
  "vconcat": [
    {
      "title": "Count of Cars by Origin",
      "layer": [
        {
          "mark": "bar",
          "encoding": {
            "x": {"field": "Origin", "type": "nominal"},
            "y": {"aggregate": "count"},
            "color": {
              "condition": {"param": "ptSelect", "field": "Origin", "type": "nominal"},
              "value": "lightgray"
            }
          }
        },
        {
          "mark": {
            "type": "text",
            "x": 200,
            "y": -10,
            "fontSize": 14,
            "fontWeight": "bold",
            "color": "black"
          },
          "encoding": {
            "text": {"field": "Origin"},
            "opacity": {
              "condition": {
                "param": "ptSelect",
                "empty": false,
                "value": 1
              },
              "value": 0
            }
          }
        }
      ]
    },
    {
      "title": "Horsepower vs Miles per Gallon",
      "layer": [
        {
          "params": [
            {
              "name": "ptSelect",
              "select": {"type": "point", "fields": ["Origin"]}
            }
          ],
          "mark": "point",
          "encoding": {
            "x": {"field": "Horsepower", "type": "quantitative"},
            "y": {"field": "Miles_per_Gallon", "type": "quantitative"},
            "color": {
              "condition": {"param": "ptSelect", "field": "Origin", "type": "nominal"},
              "value": "lightgray"
            }
          }
        },
        {
          "mark": {
            "type": "text",
            "x": 200,
            "y": -10,
            "fontSize": 14,
            "fontWeight": "bold",
            "color": "black"
          },
          "encoding": {
            "text": {"field": "Origin"},
            "opacity": {
              "condition": {
                "param": "ptSelect",
                "empty": false,
                "value": 1
              },
              "value": 0
            }
          }
        }
      ]
    }
  ]
}
